generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model Account {
  id       Int     @id @default(autoincrement())
  email    String
  password String
  dealer   Boolean @default(false)
  Deal     Deal[]
}

model Deal {
  id          Int      @id @default(autoincrement())
  owner       Account  @relation(references: [id], fields: [accountId])
  title       String
  description String
  category    Category @relation(references: [id], fields: [categoryId])
  duration    Duration
  start       DateTime
  accountId   Int
  categoryId  Int
}

model Category {
  id   Int    @id @default(autoincrement())
  name String
  Deal Deal[]
}

enum Duration {
  ONE_DAY
  TWO_DAYS
}
